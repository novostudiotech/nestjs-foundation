{
  "name": "nestjs-foundation",
  "version": "0.0.1",
  "description": "Production-ready NestJS boilerplate",
  "author": "krylov@vasily.dev",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "init:project": "ts-node init.ts",
    "dev": "NODE_OPTIONS='-r dotenv/config' nest start --watch",
    "dev:email": "email dev --dir src/notifications/channels/email/templates --port 3001",
    "build": "nest build",
    "start": "NODE_OPTIONS='-r dotenv/config' nest start",
    "lint": "biome check --write --no-errors-on-unmatched .",
    "lint:ci": "biome ci --no-errors-on-unmatched --reporter=github .",
    "debug": "NODE_OPTIONS='-r dotenv/config' nest start --watch --debug",
    "start:prod": "node -r dotenv/config dist/main",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:generate-api": "orval --config orval.config.ts",
    "prepare": "husky 2>/dev/null || true",
    "typeorm": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/typeorm/cli",
    "migration:generate": "pnpm typeorm migration:generate -d src/data-source.ts",
    "migration:create": "pnpm typeorm migration:create",
    "migration:run": "pnpm typeorm migration:run -d src/data-source.ts",
    "migration:revert": "pnpm typeorm migration:revert -d src/data-source.ts",
    "migration:show": "pnpm typeorm migration:show -d src/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@react-email/components": "^1.0.4",
    "@sentry/node": "^10.32.1",
    "@thallesp/nestjs-better-auth": "^2.2.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "better-auth": "^1.4.10",
    "compression": "^1.8.1",
    "fast-redact": "^3.5.0",
    "helmet": "^8.1.0",
    "nestjs-pino": "^4.5.0",
    "nestjs-zod": "^5.1.1",
    "pg": "^8.16.3",
    "pg-error-constants": "^1.0.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.7.0",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "uuidv7": "^1.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.11",
    "@playwright/test": "^1.57.0",
    "@react-email/preview-server": "5.2.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/tough-cookie": "^4.0.5",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.5",
    "cookie": "^1.1.1",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "orval": "^7.17.2",
    "patch-package": "^8.0.1",
    "pino-pretty": "^13.1.3",
    "react-email": "^5.2.1",
    "source-map-support": "^0.5.21",
    "tough-cookie": "^6.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
