{
  "name": "nestjs-foundation",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "NODE_OPTIONS='-r dotenv/config' nest start --watch",
    "build": "nest build",
    "start": "NODE_OPTIONS='-r dotenv/config' nest start",
    "lint": "biome check --write --no-errors-on-unmatched .",
    "lint:ci": "biome ci --no-errors-on-unmatched --reporter=github .",
    "debug": "NODE_OPTIONS='-r dotenv/config' nest start --watch --debug",
    "start:prod": "node -r dotenv/config dist/main",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:generate-api": "orval --config orval.config.ts",
    "prepare": "husky 2>/dev/null || true",
    "typeorm": "NODE_OPTIONS='-r dotenv/config' ts-node node_modules/typeorm/cli",
    "migration:generate": "pnpm typeorm migration:generate -d src/data-source.ts",
    "migration:create": "pnpm typeorm migration:create",
    "migration:run": "pnpm typeorm migration:run -d src/data-source.ts",
    "migration:revert": "pnpm typeorm migration:revert -d src/data-source.ts",
    "migration:show": "pnpm typeorm migration:show -d src/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@thallesp/nestjs-better-auth": "^2.2.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "nestjs-pino": "^4.5.0",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@playwright/test": "^1.56.1",
    "@types/express": "^5.0.0",
    "@types/node": "^25.0.3",
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "orval": "^7.8.0",
    "pino-pretty": "^13.1.3",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
